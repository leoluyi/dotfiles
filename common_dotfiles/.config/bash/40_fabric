# vim: ft=sh:
# shellcheck shell=bash
# Fabric AI shell integrations (https://github.com/danielmiessler/fabric)

command -v fabric-ai >/dev/null || return 0

alias fabric='fabric-ai'

# Query AI via Fabric.
# Usage: ai <your question>
ai() {
    if [ -z "$1" ]; then
        echo "Usage: ai <your question>" >&2
        return 1
    fi
    echo "$*" | fabric-ai -p ai
}
